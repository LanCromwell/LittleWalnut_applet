/* pages/play/play.wxss */
/* 滚动条隐藏 */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.container{
  position: fixed;
  width: 100%;
  height: 100%;
}
.bg-img{
  position: fixed;
  width: 100%;
  height: 100%;
  filter: blur(30px);
}
.bady{
  position: fixed;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.title-ly{
  width: 100%;
  height:80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.close-btn-ly{
  height:80rpx;
  width: 80rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
}
.close-btn{
  width: 28rpx;
  height: 28rpx;
  margin-left: 20rpx;
  align-self: center;
}
.title-right-place{
  width: 28rpx;
  height: 28rpx;
  margin-left: 40rpx;
  color:transparent;
  padding: 20rpx;
}
.title{
  height:50rpx;
  font-size:36rpx;
  font-family:PingFangSC-Semibold,PingFang SC;
  font-weight:600;
  color:rgba(255,255,255,1);
  line-height:50rpx;
  align-self: center;
}

.centerly{
  width: 100%;
  display: flex;
  flex-direction: column;
  position: fixed;
  top: 20%;
}
.gif-img{
  width: 640rpx;
  height: 640rpx;
  align-self: center;
}

.video-title{
  font-size:50rpx;
  font-family:PingFangSC-Semibold,PingFang SC;
  font-weight:600;
  color:rgba(255,255,255,1);
  align-self: center;
  margin-left: 5%;
  margin-right: 5%;
}

.circle-center-ly{
  width: 100%;
  display: flex;
  flex-direction: column;
  position: fixed;
  top: 30%;
  margin-top: 220rpx;
}

.shuye{
  width: 93rpx;
  height: 102rpx;
  align-self: center;
}
.shuye-text{
  font-size:34rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(255,255,255,1);
  align-self: center;
  margin-top: 26rpx;
}
.operatorLy{
  width: 100%;
  position: fixed;
  right: 30rpx;
  bottom: 150rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  align-content: center;
  justify-content: center;
}
.priseLy{
  display: flex;
  flex-direction: column;
  align-content: center;
  align-items: center;
  margin-top: 40rpx;
  margin-left: 60rpx;
}

.priceIcon{
  width: 100rpx;
  height: 100rpx;
}
.iconText{
  color: white;
  font-size:40rpx;
  margin-top: 10rpx;
}
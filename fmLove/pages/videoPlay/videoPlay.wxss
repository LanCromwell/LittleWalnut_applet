/* pages/videoplay/videoPlay.wxss */
Page {
  background:white;
  padding-bottom: constant(safe-area-inset-bottom);/* 兼容iPhone X 底部安全间距*/
  padding-bottom: env(safe-area-inset-bottom);/* 兼容iPhone X 底部安全间距*/
}
/* 滚动条隐藏 */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.container{
  position: fixed;
  width: 100%;
  height: 100%;
}
.bg-img{
  position: fixed;
  width: 100%;
  height: 100%;
  filter: blur(90px);
}
.bady{
  position: fixed;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.title-ly{
  width: 100%;
  height:80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  position: fixed;

}
.close-btn-ly{
  height:80rpx;
  width: 80rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
}
.close-btn{
  width: 28rpx;
  height: 28rpx;
  margin-left: 20rpx;
  align-self: center;
}
.title-right-place{
  width: 28rpx;
  height: 28rpx;
  margin-left: 40rpx;
  color:transparent;
  padding: 20rpx;
}
.title{
  height:50rpx;
  font-size:36rpx;
  font-family:PingFangSC-Semibold,PingFang SC;
  font-weight:600;
  color:rgba(255,255,255,1);
  line-height:50rpx;
  align-self: center;
}

.centerly{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  position: fixed;
}
.myVideo{
  width: 100%;
  height: 100%;
}

.operatorLy{
  position: fixed;
  right: 30rpx;
  bottom: 150rpx;
}
.priseLy{
  display: flex;
  flex-direction: column;
  align-content: center;
  align-items: center;
  margin-top: 40rpx;
}

.priceIcon{
  width: 100rpx;
  height: 100rpx;
}
.iconText{
  color: white;
  font-size:40rpx;
  margin-top: 10rpx;
}

.gif-img{
  position: fixed;
  bottom: 0rpx;
  height: 150rpx;
  width: 150rpx;
  right: -20rpx;
  align-self: flex-end;
}
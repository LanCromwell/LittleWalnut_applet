view {
  overflow: auto;
  word-break: break-all;
}

/**渐变按钮样式*/
.oip-button {
  color: #fff;
  text-align: center;
  font-family: PingFangSC-Regular;
  border-radius: 50rpx;
  background-image: linear-gradient(to right, #0B2FB5, #768AD7);
  position: relative;
}
.oip-button:active:after {
  position:absolute;
  top:0px;
  left:0px;
  content: "";
  width: 100%;
  height: 100%;
  border-radius: 50rpx;
  background: rgba(0, 0, 0, 0.25);
}

/* 单行文本样式 超出... */
.oip-text-single {
  /* width: 80%; */
  word-break: break-all;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

/* 多行文本样式 超出... */
.oip-text-multi {
  /* width: 80%; */
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  overflow: hidden;
  text-overflow:ellipsis;
  display: -webkit-box;
}

/**卡片点击动画 */
.oip-card-anim {
  transition-duration: 800ms;
  -webkit-transition-function: ease-out;
  -webkit-transition-duration: 800ms;
}
.oip-card-anim:active {
  transform: scale(1.15, 1.15);
  -webkit-transform: scale(1.15, 1.15);
}

/**列表条目点击动画  */
.oip-card-anim-in {
  transition-duration: 800ms;
  -webkit-transition-function: ease-out;
  -webkit-transition-duration: 800ms;
}
.oip-card-anim-in:active {
  transform: scale(0.85, 0.85);
  -webkit-transform: scale(0.85, 0.85);
}

/**列表条目点击变色 */
.oip-card-selected {
  position: relative;
}
.oip-card-selected:active:after {
  position:absolute;
  top:0px;
  left:0px;
  content: "";
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.05);
}
